@page "/"
@namespace AgarBlazorExample.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AgarBlazorExample</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
</head>
<body>
    <app>
        <component type="typeof(App)" render-mode="ServerPrerendered" />
    </app>

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>

    <script src="_framework/blazor.server.js"></script>

    @*DODATKOWE*@
    <script>

        window.AreaResized = (DotNetRef) => {
            window.addEventListener("resize",
                () => { DotNetRef.invokeMethodAsync('OnBrowserResize').then(data => data); });

        }

        window.GetSize = () => {
            var x = window.innerWidth;
            var y = window.innerHeight;
            return [x, y];
        };

        window.SetFocusToUniverse = () => {
            console.log("setting focus");
            document.getElementById("universe").focus();
        };
    </script>
</body>
</html>
